package com.roytuts.spring.drools.rules

import com.example.drools.demo.model.CurrencyCode;
import com.example.drools.demo.exception.NumberFormatException;

rule "CurrencyCodeValidation"
	when
		CurrencyCode(code != 0 && code matches "^[a-z]*$")
	then
		throw new NumberFormatException("Invalid Currency Code. Must be a valid 2 letter alphabet.");
end